[metadata]
name = {{ package_namespace_pkg }}{{ project_name }}
description = {{ summary }}
long_description = file: README.md
long_description_content_type = text/markdown
author = {{ author }}
author_email = {{ author_email }}
keywords = salt-extension
url = {{ url }}
{%- if source_url or tracker_url or docs_url %}
project_urls =
    {%- if source_url %}
    Source={{ source_url }}
    {%- endif %}
    {%- if tracker_url %}
    Tracker={{ tracker_url }}
    {%- endif %}
    {%- if docs_url %}
    Documentation={{ docs_url }}
    {%- endif %}
{%- endif %}
license = {{ license_name }}
classifiers =
    Programming Language :: Python
    Programming Language :: Cython
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3 :: Only
{%- for i in range(python_requires[1], max_python_minor + 1) %}
    Programming Language :: Python :: 3.{{ i }}
{%- endfor %}
    Development Status :: 4 - Beta
    Intended Audience :: Developers
    {{ license_classifier }}
platforms = any

[options]
zip_safe = False
include_package_data = True
package_dir =
    =src
packages = find_namespace:
python_requires = >= {{ python_requires | join(".") }}
setup_requires =
  wheel
  setuptools>=50.3.2
  setuptools_scm[toml]>=3.4
install_requires =
  salt>={{ salt_version }}

[options.extras_require]
changelog =
  towncrier==22.12.0
dev =
  nox
  pre-commit>=2.4.0
  pylint
  SaltPyLint
docs =
  sphinx
  sphinx-prompt
  sphinxcontrib-spelling
  sphinx-copybutton
  furo
{%- if python_requires < (3, 8) %}
  furo <= 2023.03.27; python_version < "3.8"
  importlib_metadata; python_version < "3.8"
{%- endif %}
docsauto =
  sphinx-autobuild
lint =
  pylint
  saltpylint
tests =
  pytest >= 6.1.0
  pytest-salt-factories >= 1.0.0rc19

[options.packages.find]
where = src
exclude =
    tests

[options.entry_points]
salt.loader=
  {{ package_namespace_pkg }}{{ project_name }} = {{ package_namespace_pkg }}{{ package_name }}

[bdist_wheel]
# Use this option if your package is pure-python
universal = 1

[build_sphinx]
source_dir = docs
build_dir = build/sphinx

[sdist]
owner = root
group = root
